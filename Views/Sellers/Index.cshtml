
@model IEnumerable<WebProjct.Models.Seller>
@{
    ViewData["Title"] = "Cadastros";
}

<h2>@ViewData["Title"]</h2>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var i in Model){
            <tr>
                <td>
                    @Html.DisplayFor(ModelItem => i.Name)
                </td>
                <td>
                    @Html.DisplayFor(ModelItem => i.Email)
                </td>
                <td>
                    @Html.DisplayFor(ModelItem => i.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(ModelItem => i.BaseSalary)
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary" asp-controller="Sellers" asp-action="Editar" asp-route-id="@i.Id">Editar</a>
                        <a class="btn btn-danger" asp-controller="Sellers" asp-action="ApagarConfirmacao" asp-route-id="@i.Id">Apagar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a class="btn btn-primary" asp-controller="Sellers" asp-action="Create">Criar novo</a>
</div>
